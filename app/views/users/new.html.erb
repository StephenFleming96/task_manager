<div class="container">
	<%= form_with scope: :user, url: users_path, local: true do |form| %>
		<p>
			<%= form.label :name %>
			<%= form.text_field :name %>
		</p>
		<p>
			<%= form.label :email %>
			<%= form.text_field :email %>
		</p>
		<p>
			<%= form.label :password %>
			<%= form.text_field :password %>
		</p>

		<p>
			<%= form.submit %>
		</p>
	<% end %>
</div>