<%= render 'application/header' %>
<div class="container">
	<br/>

	<% if @errors %>
		<div class="container container-centered">	
			<p class="validation-error">Email or Password is incorrect!</p>
		</div>
	<% end %>

	<div class="container container-centered border-light-grey">
		<h1>Task Manager - Login</h1>

		<%= form_tag '/login' do %>
			<p>Email: <%= text_field_tag :email %></p>
			<p>Password: <%= password_field_tag :password %></p>

			<%= submit_tag "Submit" %>
		<% end %>
	</div>
	<br/>

	<div class="container container-centered">
		<a href="/">Return to Home</a>
	</div>
</div>