<div class="container">
	<h1>New Task</h1>

	<%= form_with scope: :task, url: tasks_path, local: true do |form| %>
		<p>
			<%= form.label :title %>
			<br/>
			<%= form.text_field :title %>
		</p>

		<p>
			<%= form.label :description %>
			<br/>
			<%= form.text_field :description %>
		</p>

		<p class='form-select'>
			<%= form.label :end %>
			<br/>
			<%= form.datetime_select :end, default: 2.days.from_now  %>
		</p>

		<p class='form-select'>
			<%= form.label :start %>
			<br/>
			<%= form.datetime_select :start  %>
		</p>

		<p>
			<%= form.submit %>
		</p>
	<% end %>
</div>