<div class="container">
	<h1>User Management</h1>

	<table>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th></th>
		</tr>

		<% @tasks.each do |task| %>
			<tr>
				<td><%= task.name %></td>
				<td><%= task.description %></td>
				<td><%= link_to 'Show', task_path(task) %></td>
			</tr>
		<% end %>
	</table>
</div>